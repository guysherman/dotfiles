bindsym --release $mod+Print exec --no-startup-id "scrot -u 'Screenshot_%Y-%m-%d_%T.png' -e 'mv $f ~/Pictures/'"
bindsym --release $mod+Shift+Print exec --no-startup-id "scrot -sf 'Screenshot_%Y-%m-%d_%T.png' -e 'mv $f ~/Pictures/'"

